<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/traktExportRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/traktExportToolbar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:contentInsetStartWithNavigation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="@drawable/ic_arrow_back"
    app:title="@string/textTraktExport"
    />

  <ImageView
    android:id="@+id/traktExportIcon"
    android:layout_width="80dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@id/traktExportIconArrow"
    app:layout_constraintEnd_toStartOf="@id/traktExportIconArrow"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/traktExportIconArrow"
    app:srcCompat="@mipmap/ic_launcher_round"
    />

  <ImageView
    android:id="@+id/traktExportIconArrow"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:padding="18dp"
    app:layout_constraintBottom_toTopOf="@id/traktExportTitle"
    app:layout_constraintEnd_toStartOf="@id/traktExportIconShowly"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toEndOf="@id/traktExportIcon"
    app:layout_constraintTop_toBottomOf="@id/traktExportToolbar"
    app:layout_constraintVertical_bias="0.33"
    app:layout_constraintVertical_chainStyle="packed"
    app:srcCompat="@drawable/ic_arrow_right"
    />

  <ImageView
    android:id="@+id/traktExportIconShowly"
    android:layout_width="80dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@id/traktExportIconArrow"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toEndOf="@id/traktExportIconArrow"
    app:layout_constraintTop_toTopOf="@id/traktExportIconArrow"
    app:srcCompat="@drawable/ic_trakt"
    />

  <TextView
    android:id="@+id/traktExportTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="@dimen/spaceTiny"
    android:text="@string/textTraktExport"
    android:textAllCaps="true"
    android:textColor="@color/colorTextPrimary"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/traktExportDescription"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/traktExportIconArrow"
    />

  <TextView
    android:id="@+id/traktExportDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spaceBig"
    android:layout_marginTop="@dimen/spaceSmall"
    android:layout_marginEnd="@dimen/spaceBig"
    android:gravity="center"
    android:text="@string/textTraktExportDescription"
    android:textColor="@color/colorTextSecondary"
    android:textSize="14sp"
    app:layout_constraintBottom_toTopOf="@id/traktExportButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/traktExportTitle"
    />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/traktExportButton"
    style="@style/Widget.MaterialComponents.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:minWidth="200dp"
    android:text="@string/textTraktExportStart"
    android:textColor="@color/colorWhite"
    app:backgroundTint="@color/colorAccent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/traktExportDescription"
    app:rippleColor="@color/colorWhite"
    app:strokeColor="@color/colorWhite"
    />

  <ProgressBar
    android:id="@+id/traktExportProgress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundTint="@color/colorAccent"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/traktExportButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/traktExportButton"
    />

</androidx.constraintlayout.widget.ConstraintLayout>