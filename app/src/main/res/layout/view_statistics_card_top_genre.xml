<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardBackgroundColor="@color/colorStatisticsCardBackground"
  tools:parentTag="com.google.android.material.card.MaterialCardView"
  >

  <LinearLayout
    android:id="@+id/viewTopGenresContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/spaceMedium"
    android:paddingTop="@dimen/spaceNormal"
    android:paddingEnd="@dimen/spaceMedium"
    android:paddingBottom="@dimen/spaceNormal"
    >

    <TextView
      android:id="@+id/viewTopGenresTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spaceSmall"
      android:drawableStart="@drawable/ic_stars_round"
      android:drawablePadding="@dimen/spaceSmall"
      android:gravity="center_vertical"
      android:text="@string/textStatisticsTopGenre"
      android:textColor="@color/colorTextPrimary"
      android:textSize="@dimen/listHeaderTextSize"
      android:textStyle="bold"
      />

    <TextView
      android:id="@+id/viewTopGenresValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spaceTiny"
      android:lineSpacingExtra="2dp"
      android:textColor="@color/colorAccent"
      android:textSize="24sp"
      android:textStyle="bold"
      tools:text="Drama | Comedy | Thriller | SF"
      />

    <TextView
      android:id="@+id/viewTopGenresSubValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/textStatisticsTopGenreSubValue"
      android:textColor="@color/colorTextSecondary"
      android:textSize="14sp"
      />

  </LinearLayout>

</merge>