<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardBackgroundColor="@color/colorStatisticsCardBackground"
  tools:parentTag="com.google.android.material.card.MaterialCardView"
  >

  <LinearLayout
    android:id="@+id/viewTotalTimeSpentContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/spaceMedium"
    android:paddingTop="@dimen/spaceNormal"
    android:paddingEnd="@dimen/spaceMedium"
    android:paddingBottom="@dimen/spaceNormal"
    >

    <TextView
      android:id="@+id/viewTotalTimeSpentTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spaceSmall"
      android:drawableStart="@drawable/ic_clock"
      android:drawablePadding="@dimen/spaceSmall"
      android:gravity="center_vertical"
      android:text="@string/textStatisticsTotalTimeSpent"
      android:textColor="@color/colorTextPrimary"
      android:textSize="@dimen/listHeaderTextSize"
      android:textStyle="bold"
      />

    <TextView
      android:id="@+id/viewTotalTimeSpentValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spaceTiny"
      android:textColor="@color/colorAccent"
      android:textSize="24sp"
      android:textStyle="bold"
      tools:text="1 000 000 hours\n1000000 minutes"
      />

    <TextView
      android:id="@+id/viewTotalTimeSpentSubValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/colorTextSecondary"
      android:textSize="14sp"
      tools:text="which is about 342 days and 23 hours."
      />

  </LinearLayout>

</merge>