<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorBackground</item>
  </style>

  <!--  Bottom Sheet Dialog -->

  <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/bg_bottom_sheet</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

  <style name="MyShows" />

  <style name="MyShows.Label" parent="MyShows">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    <item name="android:layout_marginTop">@dimen/spaceNormal</item>
    <item name="android:layout_marginBottom">@dimen/spaceMedium</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
    <item name="android:textSize">@dimen/listHeaderTextSize</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MyShows.Recycler" parent="MyShows">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/myShowsPosterHeight</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:overScrollMode">never</item>
    <item name="android:paddingStart">@dimen/spaceMedium</item>
    <item name="android:paddingEnd">@dimen/spaceMedium</item>
    <item name="android:nestedScrollingEnabled">false</item>
  </style>

  <!-- Tab Layout  -->

  <style name="MyShowsTabStyle" parent="Widget.Design.TabLayout">
    <item name="tabMode">scrollable</item>
    <item name="tabIndicatorColor">@color/colorAccent</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabTextAppearance">@style/MyShowsTabTextStyle</item>
    <item name="tabSelectedTextColor">@color/colorTextPrimary</item>
    <item name="tabIndicatorFullWidth">false</item>
    <item name="tabRippleColor">@android:color/transparent</item>
    <item name="tabIndicatorAnimationDuration">200</item>
  </style>

  <!-- for text -->
  <style name="MyShowsTabTextStyle" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
    <item name="android:layout_gravity">start</item>
    <item name="textAllCaps">false</item>
  </style>

</resources>
