<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="android:navigationBarColor">@color/colorBottomMenuBackground</item>
  </style>

  <style name="ProgressBarGray">
    <item name="android:indeterminateTint">@color/colorProgressGray</item>
    <item name="android:indeterminateTintMode">src_in</item>
  </style>

  <style name="ProgressBarAccent">
    <item name="android:indeterminateTint">@color/colorAccent</item>
    <item name="android:indeterminateTintMode">src_in</item>
  </style>

  <style name="Show" />

  <style name="Show.Badge" parent="Show">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">top|end</item>
    <item name="android:layout_marginEnd">@dimen/spaceTiny</item>
    <item name="android:layout_marginTop">-5dp</item>
    <item name="android:visibility">gone</item>
    <item name="android:tint">@color/colorAccent</item>
  </style>

  <style name="Show.BadgeLater" parent="Show.Badge">
    <item name="android:tint">@color/colorTextSecondary</item>
  </style>

  <!--  Bottom Sheet Dialog -->

  <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/bg_bottom_sheet</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

  <!--  Alert Dialog -->
  <style name="AlertDialog" parent="@style/Theme.MaterialComponents.Dialog">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.NegativeButton</item>
  </style>

  <style name="AlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/colorTextSecondary</item>
  </style>

  <style name="ChoiceDialog" parent="AlertDialog">
    <item name="android:background">@color/colorDialogView</item>
  </style>

  <style name="MyShows" />

  <style name="MyShows.Label" parent="MyShows">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/spaceMedium</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
    <item name="android:textSize">@dimen/listHeaderTextSize</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MyShows.RecyclerHorizontal" parent="MyShows">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/myShowsPosterHeight</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:overScrollMode">never</item>
    <item name="android:paddingStart">@dimen/spaceMedium</item>
    <item name="android:paddingEnd">@dimen/spaceMedium</item>
    <item name="android:nestedScrollingEnabled">false</item>
  </style>

  <!-- Tab Layout  -->

  <style name="MyShowsTabStyle" parent="Widget.Design.TabLayout">
    <item name="tabMode">scrollable</item>
    <item name="tabIndicatorColor">@color/colorAccent</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabTextAppearance">@style/MyShowsTabTextStyle</item>
    <item name="tabSelectedTextColor">@color/colorTextPrimary</item>
    <item name="tabIndicatorFullWidth">false</item>
    <item name="tabRippleColor">@android:color/transparent</item>
    <item name="tabIndicatorAnimationDuration">200</item>
  </style>

  <style name="MyShowsTabTextStyle" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
    <item name="android:layout_gravity">start</item>
    <item name="textAllCaps">false</item>
  </style>

  <!--  Show Details -->

  <style name="ShowDetails" />

  <style name="ShowDetails.ExtraButton" parent="ShowDetails">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawablePadding">@dimen/spaceTiny</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
    <item name="android:textSize">13sp</item>
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

  <!-- Settings -->

  <style name="Settings" />

  <style name="Settings.Category" parent="Settings">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingStart">@dimen/spaceNormal</item>
    <item name="android:paddingEnd">@dimen/spaceNormal</item>
    <item name="android:layout_marginTop">@dimen/spaceBig</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Settings.Title" parent="Settings">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Settings.Summary" parent="Settings">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="Settings.ItemLayout" parent="Settings">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/spaceNormal</item>
    <item name="android:orientation">vertical</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

</resources>
