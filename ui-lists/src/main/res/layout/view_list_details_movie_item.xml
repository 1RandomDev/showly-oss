<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="android.widget.FrameLayout"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/listDetailsMovieRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/listDetailsItemMarginHorizontal"
    android:paddingTop="@dimen/spaceSmall"
    android:paddingRight="@dimen/listDetailsItemMarginHorizontal"
    android:paddingBottom="@dimen/spaceSmall"
    >

    <ImageView
      android:id="@+id/listDetailsMovieImage"
      android:layout_width="@dimen/listDetailsItemImageWidth"
      android:layout_height="@dimen/listDetailsItemImageHeight"
      android:background="@drawable/bg_media_view_elevation"
      android:elevation="@dimen/elevationSmall"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

    <ImageView
      android:id="@+id/listDetailsMoviePlaceholder"
      android:layout_width="@dimen/listDetailsItemImageWidth"
      android:layout_height="@dimen/listDetailsItemImageHeight"
      android:layout_gravity="center"
      android:background="@drawable/bg_media_view_placeholder"
      android:elevation="@dimen/elevationSmall"
      android:padding="22dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_film"
      app:tint="?attr/colorPlaceholderIcon"
      tools:visibility="visible"
      />

    <ProgressBar
      android:id="@+id/listDetailsMovieProgress"
      style="@style/ProgressBar.Dark"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_gravity="center"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@id/listDetailsMovieImage"
      app:layout_constraintStart_toStartOf="@id/listDetailsMovieImage"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"
      />

    <TextView
      android:id="@+id/listDetailsMovieRank"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_margin="@dimen/spaceTiny"
      android:background="@drawable/bg_rank"
      android:gravity="center"
      android:includeFontPadding="false"
      android:textColor="?attr/textColorOnSurface"
      android:textSize="10sp"
      android:textStyle="bold"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="@id/listDetailsMovieImage"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieImage"
      tools:ignore="SmallSp"
      tools:text="10"
      tools:visibility="visible"
      />

    <TextView
      android:id="@+id/listDetailsMovieTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceMedium"
      android:ellipsize="end"
      android:gravity="start"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="18sp"
      app:layout_constraintBottom_toTopOf="@id/listDetailsMovieDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/listDetailsMovieImage"
      app:layout_constraintTop_toBottomOf="@id/listDetailsMovieHeader"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="Game of Thrones"
      />

    <ImageView
      android:id="@+id/listDetailsMovieHeaderIcon"
      android:layout_width="20dp"
      android:layout_height="0dp"
      android:layout_marginStart="10dp"
      android:padding="1dp"
      app:layout_constraintBottom_toBottomOf="@id/listDetailsMovieHeader"
      app:layout_constraintStart_toEndOf="@id/listDetailsMovieImage"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieHeader"
      app:srcCompat="@drawable/ic_film"
      app:tint="?attr/colorAccent"
      />

    <TextView
      android:id="@+id/listDetailsMovieHeader"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceTiny"
      android:layout_marginEnd="@dimen/spaceTiny"
      android:layout_marginBottom="@dimen/spaceMicro"
      android:ellipsize="end"
      android:gravity="start|center_vertical"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="?attr/colorAccent"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@id/listDetailsMovieTitle"
      app:layout_constraintEnd_toStartOf="@id/listDetailsMovieStarIcon"
      app:layout_constraintStart_toEndOf="@id/listDetailsMovieHeaderIcon"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      tools:ignore="SmallSp"
      tools:text="Netflix"
      />

    <ImageView
      android:id="@+id/listDetailsMovieStarIcon"
      android:layout_width="20dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@id/listDetailsMovieHeader"
      app:layout_constraintEnd_toStartOf="@id/listDetailsMovieRating"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieHeader"
      app:srcCompat="@drawable/ic_star"
      app:tint="?attr/colorAccent"
      />

    <TextView
      android:id="@+id/listDetailsMovieRating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:textColor="?android:attr/textColorSecondary"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/listDetailsMovieHeader"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieHeader"
      tools:text="7.6"
      />

    <ImageView
      android:id="@+id/listDetailsMovieUserStarIcon"
      android:layout_width="20dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@id/listDetailsMovieTitle"
      app:layout_constraintEnd_toStartOf="@id/listDetailsMovieUserRating"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieHeader"
      app:srcCompat="@drawable/ic_star"
      app:tint="?android:attr/textColorPrimary"
      />

    <TextView
      android:id="@+id/listDetailsMovieUserRating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spaceTiny"
      android:gravity="end"
      android:textColor="?android:attr/textColorSecondary"
      android:textSize="12sp"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@id/listDetailsMovieTitle"
      app:layout_constraintEnd_toStartOf="@id/listDetailsMovieStarIcon"
      app:layout_constraintTop_toTopOf="@id/listDetailsMovieHeader"
      tools:text="10"
      />

    <TextView
      android:id="@+id/listDetailsMovieDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceMedium"
      android:ellipsize="end"
      android:gravity="start"
      android:maxLines="2"
      android:textAlignment="viewStart"
      android:textColor="?android:attr/textColorSecondary"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/listDetailsMovieImage"
      app:layout_constraintTop_toBottomOf="@id/listDetailsMovieTitle"
      tools:text="Lorem Ipsum"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

</merge>