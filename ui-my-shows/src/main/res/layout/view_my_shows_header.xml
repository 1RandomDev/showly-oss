<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="android.widget.FrameLayout"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/myShowsHeaderRoot"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/spaceNormal"
    android:paddingBottom="@dimen/spaceMicro"
    >

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/myShowsHeaderLabel"
      style="@style/MyShows.Label"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/myShowsHeaderSortButton"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Section Label"
      />

    <com.google.android.material.chip.Chip
      android:id="@+id/myShowsHeaderSortButton"
      style="@style/ShowlyChip.Sort"
      android:layout_marginEnd="@dimen/spaceMedium"
      android:text="@string/textSortName"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@id/myShowsHeaderLabel"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/myShowsHeaderLabel"
      tools:visibility="visible"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

</merge>