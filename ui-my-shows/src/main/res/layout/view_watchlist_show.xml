<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="android.widget.FrameLayout"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/watchlistShowRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/watchlistMarginHorizontal"
    android:paddingTop="@dimen/spaceSmall"
    android:paddingRight="@dimen/watchlistMarginHorizontal"
    android:paddingBottom="@dimen/spaceSmall"
    >

    <ImageView
      android:id="@+id/watchlistShowImage"
      android:layout_width="@dimen/watchlistImageWidth"
      android:layout_height="@dimen/watchlistImageHeight"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

    <ImageView
      android:id="@+id/watchlistShowPlaceholder"
      android:layout_width="@dimen/watchlistImageWidth"
      android:layout_height="@dimen/watchlistImageHeight"
      android:layout_gravity="center"
      android:background="@drawable/bg_media_view_placeholder"
      android:padding="@dimen/spaceBig"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_television"
      tools:visibility="visible"
      />

    <ProgressBar
      android:id="@+id/watchlistShowProgress"
      style="@style/ProgressBarGray"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_gravity="center"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@id/watchlistShowImage"
      app:layout_constraintStart_toStartOf="@id/watchlistShowImage"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"
      />

    <TextView
      android:id="@+id/watchlistShowTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceMedium"
      android:ellipsize="end"
      android:gravity="start"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="18sp"
      app:layout_constraintBottom_toTopOf="@id/watchlistShowDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/watchlistShowImage"
      app:layout_constraintTop_toBottomOf="@+id/watchlistShowNetwork"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="Game of Thrones"
      />

    <TextView
      android:id="@+id/watchlistShowNetwork"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceMedium"
      android:ellipsize="end"
      android:gravity="start"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="?attr/colorAccent"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@+id/watchlistShowTitle"
      app:layout_constraintStart_toEndOf="@id/watchlistShowImage"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      tools:ignore="SmallSp"
      tools:text="Netflix"
      />

    <ImageView
      android:id="@+id/watchlistShowStarIcon"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/watchlistShowTitle"
      app:layout_constraintEnd_toStartOf="@id/watchlistShowRating"
      app:layout_constraintTop_toTopOf="@id/watchlistShowNetwork"
      app:srcCompat="@drawable/ic_star"
      app:tint="?attr/colorAccent"
      />

    <TextView
      android:id="@+id/watchlistShowRating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:textColor="?android:attr/textColorSecondary"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@+id/watchlistShowTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/watchlistShowNetwork"
      tools:text="7.6"
      />

    <TextView
      android:id="@+id/watchlistShowDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceMedium"
      android:ellipsize="end"
      android:gravity="start"
      android:maxLines="2"
      android:textAlignment="viewStart"
      android:textColor="?android:attr/textColorSecondary"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/watchlistShowImage"
      app:layout_constraintTop_toBottomOf="@id/watchlistShowTitle"
      tools:text="Lorem Ipsum"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

</merge>