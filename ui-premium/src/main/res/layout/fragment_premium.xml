<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/premiumRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipToPadding="false"
  android:overScrollMode="never"
  android:scrollbars="none"
  tools:background="@color/colorBackground"
  tools:layout_marginTop="0dp"
  tools:theme="@style/AppTheme"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/premiumContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/premiumToolbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="?android:attr/windowBackground"
      android:elevation="@dimen/elevationNormal"
      app:contentInsetStartWithNavigation="0dp"
      app:layout_constraintBottom_toTopOf="@id/premiumTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      app:layout_constraintVertical_chainStyle="packed"
      app:navigationIcon="@drawable/ic_arrow_back"
      app:title="@string/textPremium"
      />

    <TextView
      android:id="@+id/premiumTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spaceNormal"
      android:layout_marginTop="@dimen/spaceSmall"
      android:layout_marginEnd="@dimen/spaceNormal"
      android:drawablePadding="@dimen/spaceSmall"
      android:gravity="center_vertical"
      android:text="@string/textPremiumAdFull"
      android:textAlignment="viewStart"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="14sp"
      app:layout_constraintBottom_toTopOf="@id/premiumProgress"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/premiumToolbar"
      app:layout_goneMarginBottom="@dimen/spaceBig"
      />

    <ProgressBar
      android:id="@+id/premiumProgress"
      style="@style/ProgressBar.Accent"
      android:layout_width="30dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spaceNormal"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@id/premiumLightThemeTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/premiumTitle"
      tools:visibility="visible"
      />

    <ImageView
      android:id="@+id/premiumLightThemeImage"
      style="@style/Premium.Image"
      app:layout_constraintBottom_toBottomOf="@id/premiumLightThemeDescription"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/premiumLightThemeTitle"
      app:srcCompat="@drawable/ic_yoda"
      />

    <TextView
      android:id="@+id/premiumLightThemeTitle"
      style="@style/Premium.Title"
      android:text="@string/textLightThemeTitle"
      app:layout_constraintBottom_toTopOf="@id/premiumLightThemeDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumLightThemeImage"
      app:layout_constraintTop_toBottomOf="@id/premiumProgress"
      />

    <TextView
      android:id="@+id/premiumLightThemeDescription"
      style="@style/Premium.Description"
      android:text="@string/textLightThemeDesc"
      app:layout_constraintBottom_toTopOf="@id/premiumSeparator1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumLightThemeImage"
      app:layout_constraintTop_toBottomOf="@id/premiumLightThemeTitle"
      />

    <View
      android:id="@+id/premiumSeparator1"
      style="@style/Premium.Separator"
      app:layout_constraintBottom_toTopOf="@id/premiumCustomImagesTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/premiumLightThemeDescription"
      />

    <ImageView
      android:id="@+id/premiumCustomImagesImage"
      style="@style/Premium.Image"
      app:layout_constraintBottom_toBottomOf="@id/premiumCustomImagesDescription"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/premiumCustomImagesTitle"
      app:srcCompat="@drawable/ic_walter_white"
      />

    <TextView
      android:id="@+id/premiumCustomImagesTitle"
      style="@style/Premium.Title"
      android:text="@string/textCustomImagesTitle"
      app:layout_constraintBottom_toTopOf="@id/premiumCustomImagesDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumCustomImagesImage"
      app:layout_constraintTop_toBottomOf="@id/premiumSeparator1"
      />

    <TextView
      android:id="@+id/premiumCustomImagesDescription"
      style="@style/Premium.Description"
      android:text="@string/textCustomImagesDesc"
      app:layout_constraintBottom_toTopOf="@id/premiumSeparator2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumCustomImagesImage"
      app:layout_constraintTop_toBottomOf="@id/premiumCustomImagesTitle"
      />

    <View
      android:id="@+id/premiumSeparator2"
      style="@style/Premium.Separator"
      app:layout_constraintBottom_toTopOf="@id/premiumQuickRateTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/premiumCustomImagesDescription"
      />

    <ImageView
      android:id="@+id/premiumQuickRateImage"
      style="@style/Premium.Image"
      app:layout_constraintBottom_toBottomOf="@id/premiumQuickRateDescription"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/premiumQuickRateTitle"
      app:srcCompat="@drawable/ic_flash"
      />

    <TextView
      android:id="@+id/premiumQuickRateTitle"
      style="@style/Premium.Title"
      android:text="@string/textQuickRatingTitle"
      app:layout_constraintBottom_toTopOf="@id/premiumQuickRateDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumQuickRateImage"
      app:layout_constraintTop_toBottomOf="@id/premiumSeparator2"
      />

    <TextView
      android:id="@+id/premiumQuickRateDescription"
      style="@style/Premium.Description"
      android:text="@string/textQuickRatingDesc"
      app:layout_constraintBottom_toTopOf="@id/premiumSeparator3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumQuickRateImage"
      app:layout_constraintTop_toBottomOf="@id/premiumQuickRateTitle"
      />

    <View
      android:id="@+id/premiumSeparator3"
      style="@style/Premium.Separator"
      app:layout_constraintBottom_toTopOf="@id/premiumWidgetsTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/premiumQuickRateDescription"
      />

    <ImageView
      android:id="@+id/premiumWidgetsImage"
      style="@style/Premium.Image"
      app:layout_constraintBottom_toBottomOf="@id/premiumWidgetsDescription"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/premiumWidgetsTitle"
      app:srcCompat="@drawable/ic_zoidberg"
      />

    <TextView
      android:id="@+id/premiumWidgetsTitle"
      style="@style/Premium.Title"
      android:text="@string/textWidgetsTitle"
      app:layout_constraintBottom_toTopOf="@id/premiumWidgetsDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumWidgetsImage"
      app:layout_constraintTop_toBottomOf="@id/premiumSeparator3"
      />

    <TextView
      android:id="@+id/premiumWidgetsDescription"
      style="@style/Premium.Description"
      android:layout_marginBottom="@dimen/spaceBig"
      android:text="@string/textWidgetsDesc"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/premiumWidgetsImage"
      app:layout_constraintTop_toBottomOf="@id/premiumWidgetsTitle"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
